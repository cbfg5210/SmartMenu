<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartMenu">
        <attr name="innerPadding" format="dimension"/>
        <attr name="outerPadding" format="dimension"/>
        <attr name="smartBtnSize" format="dimension"/>
        <attr name="verticalPadding" format="dimension"/>
        <attr name="bgColor" format="color|reference"/>
        <attr name="shadowColor" format="color|reference"/>
        <attr name="smartViewRes" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SmartButton">
        <attr name="bgColor"/>
        <attr name="shadowColor"/>

        <attr name="dotRadius" format="dimension"/>
        <attr name="dotDistance" format="dimension"/>
        <attr name="dotColor" format="color|reference"/>

        <attr name="android:src"/>
        <attr name="imageRatio" format="float"/>

        <attr name="android:textSize"/>
        <attr name="android:text"/>
        <attr name="android:textColor"/>
    </declare-styleable>
</resources>